<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a_pre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="80dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="80dp"
    android:background="@drawable/backgraund"
    tools:context=".AnswerDetailActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileID"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profil"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bold_dark"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/profileID"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="140dp"
        tools:layout_constraintLeft_creator="0"
        tools:layout_constraintTop_creator="0"
        android:layout_marginTop="20dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileuserID"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="13dp"
            android:src="@drawable/profil"
            app:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.019" />

        <ImageView
            android:id="@+id/starID"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_creator="0"
            app:layout_constraintBottom_toBottomOf="@+id/profileuserID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/profileuserID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_creator="1"
            app:layout_constraintTop_toTopOf="@+id/profileuserID"
            app:layout_constraintVertical_bias="1.0"
            app:layout_editor_absoluteX="359dp"
            app:layout_editor_absoluteY="104dp"
            tools:layout_constraintBottom_creator="0"
            tools:layout_constraintRight_creator="0"
            tools:layout_constraintTop_creator="0" />

        <TextView
            android:id="@+id/txvnameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="userName"
            android:textColor="#615e5e"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.02"
            app:layout_constraintStart_toStartOf="@+id/profileuserID"
            app:layout_constraintTop_toBottomOf="@+id/profileuserID" />

        <TextView
            android:id="@+id/txvdateTimeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="date"
            android:textColor="#615e5e"
            android:textSize="9sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/txvnameID"
            app:layout_constraintTop_toBottomOf="@+id/txvnameID"/>

        <ImageView
            android:id="@+id/down"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/down"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@+id/profileuserID"
            app:layout_constraintTop_toBottomOf="@+id/profileuserID"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/txvquestionID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp"
            android:paddingBottom="15dp"
            android:text="question"
            android:textColor="#615e5e"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/profileuserID"
            app:layout_constraintTop_toBottomOf="@+id/profileuserID"/>

        <TextView
            android:id="@+id/txvLocationID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="location"
            android:textColor="#615e5e"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/lID"
            app:layout_constraintTop_toTopOf="@+id/lID"/>
        <ImageView
            android:id="@+id/lID"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/search_location"
            app:layout_constraintBottom_toTopOf="@+id/txvquestionID"
            app:layout_constraintEnd_toEndOf="@+id/txvquestionID" />

        <ImageView
            android:id="@+id/with_ansID"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/with_answer"
            app:layout_constraintTop_toBottomOf="@+id/txvquestionID"
            app:layout_constraintEnd_toStartOf="@+id/txvquestionID" />

        <TextView
            android:id="@+id/num_ansID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="num"
            android:textColor="#615e5e"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/with_ansID"
            app:layout_constraintTop_toTopOf="@+id/with_ansID" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bold_white"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout1"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="140dp"
        tools:layout_constraintLeft_creator="0"
        tools:layout_constraintTop_creator="0">

        <ListView
            android:id="@+id/listView1ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent">
        </ListView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navbar_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemBackground="@color/exo_white"
        app:itemIconTint="@color/bnv_tab_item_foreground"
        app:menu="@menu/bootom_nav"
        tools:layout_editor_absoluteX="31dp"
        app:itemIconSize="28dp"
        app:labelVisibilityMode="unlabeled" />


</androidx.constraintlayout.widget.ConstraintLayout>