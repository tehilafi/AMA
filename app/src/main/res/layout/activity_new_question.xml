<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a_pre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="80dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="80dp"
    android:background="@drawable/backgraund"
    tools:context=".AskingActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileID"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profil"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:paddingBottom="20dp"
        android:background="@drawable/bold_white"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/profileID"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="140dp"
        tools:layout_constraintLeft_creator="0"
        tools:layout_constraintTop_creator="0"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textViewTheLocationID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:fontFamily="sans-serif-black"
            android:hint="The Location:"
            android:textColor="#615e5e"
            android:textSize="17sp"
            app:layout_constraintLeft_creator="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_creator="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteX="16dp"
            app:layout_editor_absoluteY="140dp"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintTop_creator="0" />

        <ImageView
            android:id="@+id/lID"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:src="@drawable/inser"
            app:layout_constraintTop_toTopOf="@+id/textViewTheLocationID"
            app:layout_constraintEnd_toEndOf="@+id/textViewTheLocationID" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTheLocationID"
            android:scaleType="centerCrop"
            android:src="@drawable/line" />

        <TextView
            android:id="@+id/questionID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="8dp"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:hint="write your answer:"
            android:textColor="#615e5e"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/line1"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="21dp"
            android:layout_height="27dp"
            android:src="@drawable/write"
            app:layout_constraintTop_toTopOf="@+id/questionID"
            app:layout_constraintEnd_toEndOf="@+id/questionID" />

        <ImageView
            android:id="@+id/down1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/down"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/questionID"
            app:layout_constraintTop_toBottomOf="@+id/questionID"
            android:layout_marginLeft="5dp" />

        <EditText
            android:id="@+id/edtContentID"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#FFFFFFFF"
            android:ems="14"
            android:fontFamily="sans-serif"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/questionID"
            app:layout_constraintTop_toBottomOf="@+id/questionID"/>

        <ImageView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edtContentID"
            android:scaleType="centerCrop"
            android:src="@drawable/line" />

        <ImageView
            android:id="@+id/line3"
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/line_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line2" />

        <ImageView
            android:id="@+id/add_picID"
            android:layout_width="27dp"
            android:layout_height="35dp"
            android:src="@drawable/add_pic"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toStartOf="@+id/line3"
            app:layout_constraintTop_toTopOf="@+id/line2"/>

        <ImageView
            android:id="@+id/pluse1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/plus"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toStartOf="@+id/add_picID"
            app:layout_constraintTop_toTopOf="@+id/line2"/>


        <ImageView
            android:id="@+id/add_videoID"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/add_video"
            android:layout_marginTop="15dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="@+id/line3"
            app:layout_constraintTop_toTopOf="@+id/line2"/>

        <ImageView
            android:id="@+id/pluse2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/plus"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toStartOf="@+id/add_videoID"
            app:layout_constraintTop_toTopOf="@+id/line2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <CheckBox
        android:id="@+id/checkBoxID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textSize="16sp"
        android:textColor="#453b3b"
        android:textStyle="bold"
        android:onClick="itemClicked"
        android:text="Mark a question as important"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout1" />

    <TextView
        android:id="@+id/impoetant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:hint="You have 3 important questions left"
        android:textColor="#615e5e"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxID" />


    <Button
        android:id="@+id/btnSaveID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="30dp"
        android:text="SEND"
        android:textColor="#168a91"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/impoetant" />

</androidx.constraintlayout.widget.ConstraintLayout>