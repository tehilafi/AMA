<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/backgraund"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileID"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="337dp"
        android:src="@drawable/photo_profile_start"></de.hdodenhof.circleimageview.CircleImageView>

    <LinearLayout
        android:layout_width="377dp"
        android:layout_height="393dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="98dp"
        android:background="@drawable/bold_white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/placeID"
            android:layout_width="109dp"
            android:layout_height="19dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:fontFamily="sans-serif-light"
            android:gravity="center|center_vertical"
            android:hint="Enter the place"
            android:textColor="#615e5e"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="21dp"
            android:layout_height="30dp"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="-25dp"
            tools:srcCompat="@drawable/inser" />

        <View
            android:layout_width="348dp"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:outlineAmbientShadowColor="#85707070" />

        <EditText
            android:id="@+id/questionID"
            android:layout_width="140dp"
            android:layout_height="19dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:fontFamily="sans-serif-light"
            android:gravity="center|center_vertical"
            android:hint="write your question"
            android:textColor="#615e5e"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="21dp"
            android:layout_height="30dp"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="-25dp"
            tools:srcCompat="@drawable/write" />

        <EditText
            android:id="@+id/edtContentID"
            android:layout_width="310dp"
            android:layout_height="184dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:background="#FFFFFFFF"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:textColorHint="#000000"
            android:visibility="visible" />

        <View
            android:layout_width="348dp"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:outlineAmbientShadowColor="#85707070" />

        <ImageView
            android:id="@+id/add_picID"
            android:layout_width="30dp"
            android:layout_height="39dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            tools:srcCompat="@drawable/add_pic" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="106dp"
            android:layout_marginTop="-32dp"
            tools:srcCompat="@drawable/plus" />

        <View
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-45dp"
            android:outlineAmbientShadowColor="#85707070" />

        <ImageView
            android:id="@+id/add_videoID"
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:layout_marginLeft="268dp"
            android:layout_marginTop="-49dp"
            tools:srcCompat="@drawable/add_video" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="312dp"
            android:layout_marginTop="-32dp"
            tools:srcCompat="@drawable/plus" />

    </LinearLayout>


    <CheckBox
        android:id="@+id/checkBoxID"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="515dp"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:textColor="#453b3b"
        android:textStyle="bold"
        android:text="Mark a question as important" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_marginTop="545dp"
        android:layout_marginLeft="30dp"
        android:textColor="#615e5e"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="You have 3 important questions left" />

    <Button
        android:id="@+id/btnSaveID"
        android:background="@drawable/rectangle_blue"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="620dp"
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#168a91"
        android:text="Update" />

    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="671dp"
        android:layout_marginLeft="13dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/add_locationID"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/search" />


        <ImageView
            android:id="@+id/my_questionID"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/q_a" />



        <ImageView
            android:id="@+id/questionSentToMeID"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="115dp"
            android:src="@drawable/send" />


    </LinearLayout>



</RelativeLayout>