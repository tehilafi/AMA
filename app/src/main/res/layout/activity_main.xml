<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/backgraund"
    android:screenOrientation="portrait"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="340dp"
        android:layout_height="480dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/profileID"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/profil"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="300dp"/>


    <ImageView
        android:id="@+id/requesr_location_updates_button"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:src="@drawable/allow_location"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/remove_location_updates_button"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:src="@drawable/disallow_location"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"/>

    <SearchView
        android:id="@+id/search_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        android:queryHint="Search location"
        android:iconifiedByDefault="false"
        android:background="@drawable/rectangle_yellow">
    </SearchView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="560dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bold">

        <ImageView
            android:id="@+id/mainID"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/search"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"/>

        <ImageView
            android:id="@+id/my_questionID"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/q_a"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="150dp"/>

        <ImageView
            android:id="@+id/add_locationID"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/send"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="300dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>