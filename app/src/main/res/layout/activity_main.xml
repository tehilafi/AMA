<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.google.android.gms.location.sample.locationupdate">


<fragment
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <Button
        android:id="@+id/requesr_location_updates_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE LOCATION" />
    <Button
        android:id="@+id/remove_location_updates_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMOVE UPDATES" />
    </LinearLayout>

    <SearchView
        android:id="@+id/search_location"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:queryHint="Search location"
        android:iconifiedByDefault="false"
        android:elevation="5dp"
        android:background="@drawable/bg_round">
    </SearchView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/add_locationID"
            android:layout_width="101dp"
            android:layout_height="65dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_baseline_add_location_24" />

        <ImageView
            android:id="@+id/my_questionID"
            android:layout_width="86dp"
            android:layout_height="65dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_baseline_question_answer_24" />

        <ImageView
            android:id="@+id/questionSentToMeID"
            android:layout_width="101dp"
            android:layout_height="65dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_baseline_supervisor_account_24"/>

    </LinearLayout>



</RelativeLayout>