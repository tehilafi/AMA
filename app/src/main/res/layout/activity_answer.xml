<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a_pre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="80dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="80dp"
    android:background="@drawable/backgraund"
    tools:context=".AnswerActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileID"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profil"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bold_white"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/profileID"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="140dp"
        tools:layout_constraintLeft_creator="0"
        tools:layout_constraintTop_creator="0"
        android:layout_marginTop="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileuserID"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="13dp"
            android:src="@drawable/profil"
            app:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.019" />

        <ImageView
            android:id="@+id/starID"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_creator="0"
            app:layout_constraintBottom_toBottomOf="@+id/profileuserID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/profileuserID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_creator="1"
            app:layout_constraintTop_toTopOf="@+id/profileuserID"
            app:layout_constraintVertical_bias="1.0"
            app:layout_editor_absoluteX="359dp"
            app:layout_editor_absoluteY="104dp"
            tools:layout_constraintBottom_creator="0"
            tools:layout_constraintRight_creator="0"
            tools:layout_constraintTop_creator="0" />

        <TextView
            android:id="@+id/txvnameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="userName"
            android:textColor="#615e5e"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.02"
            app:layout_constraintStart_toStartOf="@+id/profileuserID"
            app:layout_constraintTop_toBottomOf="@+id/profileuserID" />

        <TextView
            android:id="@+id/txvdateTimeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="date"
            android:textColor="#615e5e"
            android:textSize="9sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/txvnameID"
            app:layout_constraintTop_toBottomOf="@+id/txvnameID"/>

        <ImageView
            android:id="@+id/down"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/down"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/profileuserID"
            app:layout_constraintTop_toBottomOf="@+id/profileuserID"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/txvquestionID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:paddingBottom="15dp"
            android:text="question"
            android:textColor="#615e5e"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/profileuserID"
            app:layout_constraintTop_toBottomOf="@+id/profileuserID"/>

        <TextView
            android:id="@+id/txvLocationID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="location"
            android:textColor="#615e5e"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/lID"
            app:layout_constraintTop_toTopOf="@+id/lID"
            android:layout_marginRight="10dp" />

        <ImageView
            android:id="@+id/lID"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:layout_marginBottom="28dp"
            android:src="@drawable/search_location"
            app:layout_constraintBottom_toTopOf="@+id/txvquestionID"
            app:layout_constraintEnd_toEndOf="@+id/txvquestionID" />

        <ImageView
            android:id="@+id/with_ansID"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/with_answer"
            app:layout_constraintTop_toBottomOf="@+id/txvquestionID"
            app:layout_constraintEnd_toStartOf="@+id/txvquestionID" />

        <TextView
            android:id="@+id/num_ansID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif"
            android:text="num"
            android:textColor="#615e5e"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/with_ansID"
            app:layout_constraintTop_toTopOf="@+id/with_ansID" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bold_white"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout1"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="140dp"
        tools:layout_constraintLeft_creator="0"
        tools:layout_constraintTop_creator="0"
        android:layout_marginTop="20dp">



        <TextView
            android:id="@+id/write"
            android:layout_width="140dp"
            android:layout_height="19dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:fontFamily="sans-serif-light"
            android:gravity="center|center_vertical"
            android:hint="write your answer:"
            android:textColor="#615e5e"
            android:textSize="14sp"
            app:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/writeID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_creator="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteX="16dp"
            app:layout_editor_absoluteY="140dp"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintTop_creator="0" />

        <ImageView
            android:id="@+id/writeID"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:layout_marginStart="128dp"
            android:layout_marginLeft="128dp"
            android:src="@drawable/write"
            app:layout_constraintStart_toEndOf="@+id/write"
            app:layout_constraintTop_toTopOf="@+id/write" />

        <ImageView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/write"
            android:scaleType="centerCrop"
            android:src="@drawable/line" />

        <ImageView
            android:id="@+id/down2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/down"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/line2"
            app:layout_constraintTop_toBottomOf="@+id/line2"
            android:layout_marginLeft="5dp" />

        <EditText
            android:id="@+id/edtContentID"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#FFFFFFFF"
            android:ems="14"
            android:fontFamily="sans-serif"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/line2"
            app:layout_constraintTop_toBottomOf="@+id/line2"/>

        <ImageView
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edtContentID"
            android:scaleType="centerCrop"
            android:src="@drawable/line" />

        <ImageView
            android:id="@+id/line4"
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/line_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line3" />

        <ImageView
            android:id="@+id/add_picID"
            android:layout_width="27dp"
            android:layout_height="35dp"
            android:src="@drawable/add_pic"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toStartOf="@+id/line4"
            app:layout_constraintTop_toTopOf="@+id/line3"/>

        <ImageView
            android:id="@+id/pluse1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/plus"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/add_picID"
            app:layout_constraintTop_toTopOf="@+id/line3"/>


        <ImageView
            android:id="@+id/add_videoID"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/add_video"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="@+id/line4"
            app:layout_constraintTop_toTopOf="@+id/line3"/>

        <ImageView
            android:id="@+id/pluse2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/plus"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/add_videoID"
            app:layout_constraintTop_toTopOf="@+id/line3"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/btnSaveID"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_marginTop="30dp"
        android:text="שלח"
        android:textColor="#168a91"
        android:textSize="18sp"
        android:background="@drawable/botton"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout2" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/navbar_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bootom_nav"
        tools:layout_editor_absoluteX="31dp"
        app:labelVisibilityMode="labeled"/>


</androidx.constraintlayout.widget.ConstraintLayout>