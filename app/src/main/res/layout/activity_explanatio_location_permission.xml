<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/on_location"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="80dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="80dp"
    tools:context=".ExplanationLocationPermission">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:paddingBottom="20dp"
        android:background="@drawable/bold_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintRight_creator="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_editor_absoluteX="307dp"
        app:layout_editor_absoluteY="538dp"
        tools:layout_constraintBottom_creator="0"
        tools:layout_constraintRight_creator="0">

        <TextView
            android:id="@+id/titleID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="sans-serif-light"
            android:text="במסך הבית של האפליקציה צריכים ללחוץ על כפתור המיקום כדי לתת הרשאת גישה למיקום המכשיר גם כשהאפליקציה סגורה"
            android:textColor="#615e5e"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintLeft_creator="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_creator="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteX="16dp"
            app:layout_editor_absoluteY="140dp"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintTop_creator="0"/>


        <Button
            android:id="@+id/yesID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="  הבנתי  "
            android:background="@drawable/botton"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="#615e5e"
            android:textSize="16sp"
            android:textStyle="normal"
            android:onClick="okBtn"
            app:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintRight_creator="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleID"
            app:layout_constraintVertical_bias="0.183"
            app:layout_editor_absoluteX="307dp"
            app:layout_editor_absoluteY="538dp"
            tools:layout_constraintBottom_creator="0"
            tools:layout_constraintRight_creator="0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>