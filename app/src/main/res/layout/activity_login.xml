<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:layout_gravity="center"
    android:background="@drawable/backgraund"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="66dp"
        android:layout_height="42.6dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="325dp"
        tools:srcCompat="@drawable/logo"/>

    <TextView
        android:layout_width="135dp"
        android:layout_height="32dp"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="-360dp"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="6sp"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="normal"
        tools:text="Welcom To " />

    <TextView
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="0dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:text="Ama !" />

    <TextView
        android:layout_width="148dp"
        android:layout_height="22dp"
        android:layout_marginTop="118dp"
        android:layout_marginLeft="-200dp"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="4sp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="normal"
        tools:text="Signup to continue" />


    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="420dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="-145dp"
        android:background="@drawable/bold"
        android:orientation="vertical">

        <TextView
            android:layout_width="65dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center|center_vertical"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:textColor="#615e5e"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="sign in" />

        <View
            android:layout_width="104dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"/>


        <EditText
            android:id="@+id/iduserID"
            android:layout_width="298dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rectangle_yellow"
            android:focusable="true"
            android:hint="ID"
            android:gravity="center|center_vertical"
            android:fontFamily="sans-serif-light"
            android:textColor="#777373"
            android:textSize="16sp" />

        <EditText
        android:id="@+id/userNameID"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rectangle_yellow"
        android:focusable="true"
        android:hint="User Name"
        android:gravity="center|center_vertical"
        android:fontFamily="sans-serif-light"
        android:textColor="#777373"
        android:textSize="16sp" />


        <EditText
        android:id="@+id/passwordID"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rectangle_yellow"
        android:focusable="true"
        android:hint="Password"
        android:gravity="center|center_vertical"
        android:fontFamily="sans-serif-light"
        android:textColor="#777373"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/phoneID"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rectangle_yellow"
        android:focusable="true"
        android:hint="Phone"
        android:gravity="center|center_vertical"
        android:fontFamily="sans-serif-light"
        android:textColor="#777373"
        android:textSize="16sp" />

        <ImageView
            android:layout_width="47.6dp"
            android:layout_height="66.7dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            tools:srcCompat="@drawable/logo_locatin"/>

    </LinearLayout>

    <Button
        android:id="@+id/logInID"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-230dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/rectangle_blue"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Update"
        android:textColor="#168a91"
        android:textSize="16sp"
        android:textStyle="bold" />





</LinearLayout>