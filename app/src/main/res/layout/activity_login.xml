<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="80dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="80dp"
    android:background="@drawable/backgraund"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="75dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Welcom To AMA"
        android:textSize="26sp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-light"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/a_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="140dp"
        tools:layout_constraintLeft_creator="0"
        tools:layout_constraintTop_creator="0"
        android:layout_marginLeft="28dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sign_in"
        android:layout_width="316dp"
        android:layout_height="377dp"
        android:background="@drawable/bold"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.588"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp">
        <TextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="sign in"
            android:textColor="#615e5e"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_creator="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_creator="0"
            app:layout_constraintTop_toTopOf="@+id/sign_in"
            app:layout_editor_absoluteX="16dp"
            app:layout_editor_absoluteY="140dp"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintTop_creator="0"
            android:layout_marginLeft="128dp" />

        <EditText
            android:id="@+id/iduserID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rectangle_yellow"
            android:ems="14"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:hint="ID"
            android:padding="10dp"
            android:textColor="#777373"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_creator="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_creator="0"
            app:layout_constraintTop_toBottomOf="@+id/sign"
            app:layout_editor_absoluteX="0dp"
            app:layout_editor_absoluteY="0dp"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintTop_creator="0" />

        <EditText
            android:id="@+id/userNameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:ems="14"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:hint="User Name"
            android:background="@drawable/rectangle_yellow"
            android:padding="10dp"
            android:textColor="#777373"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_creator="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_creator="0"
            app:layout_constraintTop_toBottomOf="@+id/iduserID"
            app:layout_editor_absoluteX="16dp"
            app:layout_editor_absoluteY="140dp"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintTop_creator="0"
            android:layout_marginLeft="24dp" />

        <EditText
            android:id="@+id/passwordID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:ems="14"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/rectangle_yellow"
            android:gravity="center"
            android:hint="Password"
            android:padding="10dp"
            android:textColor="#777373"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_creator="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_creator="0"
            app:layout_constraintTop_toBottomOf="@+id/userNameID"
            app:layout_editor_absoluteX="16dp"
            app:layout_editor_absoluteY="140dp"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintTop_creator="0"
            android:layout_marginLeft="24dp" />

        <EditText
            android:id="@+id/phoneID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:ems="14"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:hint="Phone"
            android:background="@drawable/rectangle_yellow"
            android:padding="10dp"
            android:textColor="#777373"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_creator="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_creator="0"
            app:layout_constraintTop_toBottomOf="@+id/passwordID"
            app:layout_editor_absoluteX="16dp"
            app:layout_editor_absoluteY="140dp"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintTop_creator="0"
            android:layout_marginLeft="24dp" />

        <ImageView
            android:id="@+id/s_logo"
            android:layout_width="47.6dp"
            android:layout_height="66.7dp"
            android:padding="5dp"
            android:src="@drawable/logo_locatin"
            app:layout_constraintBottom_creator="0"
            app:layout_constraintBottom_toBottomOf="@+id/sign_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/sign_in"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_creator="1"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/phoneID"
            app:layout_constraintVertical_bias="0.0"
            app:layout_editor_absoluteX="0dp"
            app:layout_editor_absoluteY="0dp"
            tools:layout_constraintBottom_creator="0"
            tools:layout_constraintRight_creator="0"
            tools:layout_constraintTop_creator="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/logInID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="SIGN IN"
        android:textColor="#168a91"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintRight_creator="1"
        app:layout_constraintStart_toStartOf="@+id/a_login"
        app:layout_constraintTop_toBottomOf="@+id/sign_in"
        app:layout_constraintVertical_bias="0.183"
        app:layout_editor_absoluteX="307dp"
        app:layout_editor_absoluteY="538dp"
        tools:layout_constraintBottom_creator="0"
        tools:layout_constraintRight_creator="0" />

</androidx.constraintlayout.widget.ConstraintLayout>