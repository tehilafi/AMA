<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/backgraund"
    tools:context=".AskQuestionActivity">


<de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileID"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="337dp"
            android:src="@drawable/photo_profile_start"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/txvLocationID"
            android:layout_width="231dp"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="115dp"
            android:text="location"
            android:gravity="center|center_vertical"
            android:textColor="#615e5e"
            android:textSize="20sp"
            android:textStyle="normal"
            android:background="@drawable/rectangle_yellow">
        </TextView>


        <ListView
            android:id="@+id/listView1ID"
            android:layout_width="350dp"
            android:layout_height="475dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/bold"/>


    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="671dp"
        android:layout_marginLeft="13dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/add_locationID"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/search" />


        <ImageView
            android:id="@+id/my_questionID"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/q_a" />



        <ImageView
            android:id="@+id/questionSentToMeID"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="115dp"
            android:src="@drawable/send" />


    </LinearLayout>
</RelativeLayout>
