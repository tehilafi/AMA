<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="TextView" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/photo_profile_start"
            app:civ_border_color="#009999"
            app:civ_border_width="4dp" />

        <TextView
            android:id="@+id/explenationProcess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="40dp"
            android:text="your prossecing for the next level" />

        <ProgressBar
            android:id="@+id/ratingBarRating"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="301dp"
            android:layout_height="86dp"
            android:gravity="center"
            android:indeterminate="false"
            android:progress="10" />

        <TextView
            android:id="@+id/textViewUrgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Urgent questions " />

        <ProgressBar
            android:id="@+id/progressBarUrgentQuastions"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:progress="5"
           android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="you have 0 likes" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="options" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#009999"
            android:alpha="0.50"
            android:shadowColor="#FFFFFF"
            android:text="change your detiles"
            android:textColorLink="#FFFFFF" />

        <Button
            android:id="@+id/button2"
            android:alpha="0.50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="your answers" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.50"
            android:background="#009999"
            android:text="your quastions" />


    </LinearLayout>
</LinearLayout>
