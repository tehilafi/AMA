<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Hadar Cohen"
            android:textColor="#009999"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/uriID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="uri"
            android:visibility="invisible"
            android:textSize="30sp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileID"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:civ_border_color="#009999"
            android:src="@drawable/profil"
            app:civ_border_width="4dp" />

        <TextView
            android:id="@+id/levelID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Level 1"
            android:textColor="#009999"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/explenationProcess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="your prossecing for the next level" />

        <ProgressBar
            android:id="@+id/ratingBarRating"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="301dp"
            android:layout_height="86dp"
            android:gravity="center"
            android:indeterminate="false"
            android:progress="10" />

        <TextView
            android:id="@+id/textViewUrgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Urgent questions " />

        <ProgressBar
            android:id="@+id/progressBarUrgentQuastions"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:progress="5" />

        <TextView
            android:id="@+id/Q"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:alpha="0.30"
            android:background="#7C7979"
            android:text="You asked 1 questions"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/A"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:background="#7C7979"
            android:alpha="0.30"
            android:text="You answered 2 answers"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/Like"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:background="#7C7979"
            android:alpha="0.30"
            android:text="you have 0 likes"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textSize="16dp" />


        <Button
            android:id="@+id/changeID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:alpha="0.70"
            android:background="#009999"
            android:shadowColor="#FFFFFF"
            android:text="change your detiles"
            android:textColorLink="#FFFFFF"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>
